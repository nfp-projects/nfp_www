{
  "name": "nfp_www",
  "version": "0.1.0",
  "description": "nfp_www MVVM frontend for nfp_api",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:res": "browserify -r mithril -o dist/js/lib/mithril.js && browserify -r lodash -o dist/js/lib/lodash.js && browserify -r jso-browser -o dist/js/lib/jso.js",
    "build:styl": "stylus assets/styl/main.styl --out dist/css",
    "watch:styl": "stylus -w assets/styl/main.styl --out dist/css",
    "build:jsx": "msx -x jsx --no-precompile assets/js/ assets/js/",
    "build:js": "npm run build:jsx && browserify -u mithril -u jso-browser assets/js/main.js -o dist/js/main.js --debug",
    "watch:js": "watch \"npm run build:js\" assets/js/",
    "build": "npm run build:js && npm run build:res && npm run build:styl",
    "build:watch": "parallelshell \"npm run watch:js\" \"npm run build:res\" \"npm run watch:styl\"",
    "start": "spserver -c ./config/config.json -b -n nfp_www -t -f ./assets/base.html -s ./dist",
    "start:watch": "watch \"npm start\" dist"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nfp-projects/nfp_www.git"
  },
  "author": "Jonatan Nilsson",
  "license": "WTFPL",
  "bugs": {
    "url": "https://github.com/nfp-projects/nfp_www/issues"
  },
  "homepage": "https://github.com/nfp-projects/nfp_www",
  "devDependencies": {
    "browserify": "^8.1.1",
    "nodemon": "^1.3.5",
    "parallelshell": "^1.0.4",
    "stylus": "^0.50.0",
    "watch": "^0.13.0"
  },
  "dependencies": {
    "app-root-path": "^1.0.0",
    "bluebird": "^2.9.3",
    "bunyan": "^1.3.3",
    "jso-browser": "git://github.com/TheThing/jso",
    "koa": "^0.16.0",
    "koa-bunyan": "0.0.2",
    "koa-static": "^1.4.8",
    "lodash": "^3.0.0",
    "mithril": "^0.1.29",
    "msx": "^0.3.0",
    "nconf": "^0.7.1",
    "spserver": "^0.1.2"
  }
}
