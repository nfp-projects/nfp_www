{
  "name": "nfp_www",
  "version": "0.1.0",
  "description": "nfp_www MVVM frontend for nfp_api",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:res": "browserify -r mithril -o dist/js/lib/mithril.js && browserify -r lodash -o dist/js/lib/lodash.js",
    "build:jsx": "msx -x jsx --no-precompile assets/js/ assets/js/",
    "build:js": "npm run build:jsx && browserify -u mithril assets/js/main.js -o dist/js/main.js --debug",
    "watch:js": "watch \"npm run build:js\" assets/js/",
    "build": "npm run build:js && npm run build:res",
    "build:watch": "parallelshell \"npm run watch:js\" \"npm run build:res\"",
    "start": "nodemon --harmony index.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nfp-projects/nfp_www.git"
  },
  "author": "Jonatan Nilsson",
  "license": "WTFPL",
  "bugs": {
    "url": "https://github.com/nfp-projects/nfp_www/issues"
  },
  "homepage": "https://github.com/nfp-projects/nfp_www",
  "devDependencies": {
    "browserify": "^8.1.1",
    "nodemon": "^1.3.5",
    "parallelshell": "^1.0.4",
    "watch": "^0.13.0"
  },
  "dependencies": {
    "app-root-path": "^1.0.0",
    "bluebird": "^2.9.3",
    "bunyan": "^1.3.3",
    "koa": "^0.16.0",
    "koa-bunyan": "0.0.2",
    "koa-static": "^1.4.8",
    "lodash": "^3.0.0",
    "mithril": "^0.1.29",
    "msx": "^0.3.0",
    "nconf": "^0.7.1"
  }
}
